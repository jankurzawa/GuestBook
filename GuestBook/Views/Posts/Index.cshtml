@model IEnumerable<GuestBook.Models.Post>

@{
    ViewData["Title"] = "Index";
}
<style>
    #pageDetails{
        display: flex;
        align-items: center;
        justify-content: space-between;
        width: 100%;
    }

    #pageDetails h1{
        justify-content: flex-start;
        font-size: 30px;
    }

    #pagination{
        display: inline-flex;
        justify-content: flex-end;
    }

    #numberOfVictims{
        display: flex;
        justify-content: flex-start;
        align-items: center;
    }

    #specificPageInput{
        margin-left: 25%;
        display: flex;
        align-items: center;
        justify-content: flex-end;
    }

    #specificPageInput input{
        width: 50px;
        height: 28px;
    }
    #numberOfVictims h4{
        justify-content: center;
        margin: 17%;

    }
    .table body{
        font-size: 8px;
    }
    #parentOfNumberOfPage{
        justify-content: center;
    }

</style>

<div id="pageDetails">  
    <h1>List of guests</h1> 
    
    <div id="pagination">   
        <div id="numberOfVictims">
            <img id="leftArrow" src="~/Pictures/ArrowBack.png" onclick="leftArrowClick()">
            <div id="parentOfNumberOfPage">
                <h4 id="numberOfPage">@TempData["numberOfPage"]</h4>
            </div>
            
            <a id="rightArrow" src="~/Pictures/ArrowForward.png" asp-area="" asp-controller="Posts" asp-action="PageUp">PageUp</a>
        </div>
        <div id="specificPageInput">
            <input type="text" id="numberOfPageInput" name="numberOfPage" cols="2" rows="1" data-role="page-number-input" onchange="pickPageFromInputLabel(value)">
        </div>
    </div>
    
</div>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CreateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>
            <th></th>
        </tr>
    </thead>
    <body>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CreateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
        </tr>
}
    <script src="~/js/pagination.js"></script>
    </body>
</table>
